<Page
    x:Class="APP_WP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:APP_WP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        
        <Button x:Name="signup" Content="注册" HorizontalAlignment="Right" Margin="0,450,50,0" VerticalAlignment="Top" Click="signup_Click" Height="40" Width="120"/>
        <Button x:Name="log_in" Content="登录" HorizontalAlignment="Left" Margin="50,450,0,0" VerticalAlignment="Top" Click="log_in_Click" Height="40" Width="120"/>
        <TextBlock x:Name="login_remind" HorizontalAlignment="Left" Margin="50,80,0,0" TextWrapping="Wrap" Text="登录" VerticalAlignment="Top" Height="40" Width="120" FontSize="32"/>
        <TextBox x:Name="ID_Box" Margin="50,160,50,0" Header="账户名" TextWrapping="Wrap" Text="" VerticalAlignment="Top" d:LayoutOverrides="LeftPosition, RightPosition" FontSize="29.333"/>
        <TextBox x:Name="password_Box" Margin="50,280,50,0" Header="密码" TextWrapping="Wrap" Text="" VerticalAlignment="Top" d:LayoutOverrides="LeftPosition, RightPosition" FontSize="29.333"/>
    </Grid>
</Page>
